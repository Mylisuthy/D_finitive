@{
    ViewData["Title"] = "Inicio | SkyTravel";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5 text-center">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-clouds"></i> SKYTRAVEL
    </h1>
    <p class="lead text-muted">Sistema de gestión de vuelos, pasajeros y reservas</p>

    <div class="row justify-content-center mt-5">
        <div class="col-md-3 mb-3">
            <a asp-controller="Vuelo" asp-action="Index" class="btn btn-outline-primary w-100 p-3 shadow-sm">
                <i class="bi bi-airplane"></i><br>Gestión de Vuelos
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Pasajero" asp-action="Index" class="btn btn-outline-success w-100 p-3 shadow-sm">
                <i class="bi bi-person-lines-fill"></i><br>Gestión de Pasajeros
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Reserva" asp-action="Index" class="btn btn-outline-warning w-100 p-3 shadow-sm">
                <i class="bi bi-calendar-check"></i><br>Reservas de Vuelos
            </a>
        </div>
    </div>

    <div class="mt-5">
        <p class="text-secondary small">
            Desarrollado por <strong>Pk</strong> · Proyecto académico SkyTravel ✈️
        </p>
    </div>
</div>