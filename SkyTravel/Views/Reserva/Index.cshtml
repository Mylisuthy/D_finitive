@model SkyTravel.Models.ReservaIndexViewModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="row">
    <div class="col-md-3 sticky-top">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-3">Registrar Nueva Reserva</h4>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label>Pasajero</label>
                        <select name="PasajeroId" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            @foreach (var p in Model.Pasajeros)
                            {
                                <option value="@p.Id">@p.Name (@p.Document)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>Vuelo</label>
                        <select name="VueloId" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            @foreach (var v in Model.Vuelos)
                            {
                                <option value="@v.Id">@v.CodeVuelo - @v.Origen → @v.Destino</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-circle"></i> Confirmar Reserva
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <h2 class="mb-3">Reservas de Vuelos</h2>
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Pasajero</th>
                    <th>Vuelo</th>
                    <th>Fecha Reserva</th>
                    <th>Estado</th>
                    <th>Código</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model.Reservas)
            {
                <tr>
                    <td>@r.pasajero?.Name</td>
                    <td>@r.vuelo?.CodeVuelo (@r.vuelo?.Origen → @r.vuelo?.Destino)</td>
                    <td>@r.Freserva.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (r.Estado == "Activa")
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else if (r.Estado == "Completada")
                        {
                            <span class="badge bg-primary">Completada</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@r.Estado</span>
                        }
                    </td>
                    <td><code>@r.CodigoReserva</code></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButton-@r.Id"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-list"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@r.Id">
                                @if (r.Estado == "Activa" || r.Estado == "Completada")
                                {
                                    <li>
                                        <a class="dropdown-item text-primary"
                                           asp-action="Ticket"
                                           asp-route-id="@r.Id">
                                            <i class="bi bi-download"></i> Generar Ticket (PDF)
                                        </a>
                                    </li>
                                }
                                @if (r.Estado == "Activa")
                                {
                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-action="Cancelar"
                                           asp-route-id="@r.Id">
                                            <i class="bi bi-x-circle"></i> Cancelar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-success"
                                           asp-action="Completar"
                                           asp-route-id="@r.Id">
                                            <i class="bi bi-check2-circle"></i> Completar
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">Sin acciones</span></li>
                                }
                            </ul>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
